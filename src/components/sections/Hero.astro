---
import Button from '../ui/Button.astro';
import FloatingCode from '../effects/FloatingCode.astro';
import GlitchText from '../effects/GlitchText.astro';
import Cursor from '../terminal/Cursor.astro';
import { siteConfig } from '../../data/site';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Grid background -->
  <div class="absolute inset-0 grid-bg"></div>

  <!-- Floating code decorations -->
  <FloatingCode />

  <div class="container mx-auto px-6 pt-20 relative z-10">
    <div class="max-w-4xl">
      <!-- Terminal prompt -->
      <div class="font-[var(--font-mono)] text-[var(--color-terminal-green)] mb-4 flex items-center gap-2">
        <span class="text-[var(--color-terminal-cyan)]">~</span>
        <span class="text-[var(--color-terminal-purple)]">$</span>
        <span>whoami</span>
        <Cursor />
      </div>

      <!-- Main heading -->
      <h1 class="font-[var(--font-display)] text-5xl md:text-7xl font-bold mb-6 leading-tight">
        <span class="text-gray-100">Hi! I'm</span>
        <br />
        <GlitchText text="Adam Davies" class="text-[var(--color-terminal-green)]" />
      </h1>

      <!-- Subtitle -->
      <p class="font-[var(--font-mono)] text-xl md:text-2xl text-[var(--color-terminal-cyan)] mb-8">
        <span class="text-[var(--color-terminal-purple)]">&gt;</span> Full Stack Software Engineer
      </p>

      <!-- Bio -->
      <p class="text-lg text-gray-400 max-w-2xl mb-10 leading-relaxed">
        {siteConfig.blurb}
      </p>

      <!-- Social links -->
      <div class="flex items-center gap-4 mb-10">
        {siteConfig.social.map((item) => (
          <a
            href={item.link}
            target="_blank"
            rel="noopener noreferrer"
            class="p-3 border border-white/10 rounded-lg hover:border-[var(--color-terminal-green)] hover:text-[var(--color-terminal-green)] transition-all hover:glow-green text-gray-400"
            aria-label={item.name}
          >
            <Fragment set:html={item.icon} />
          </a>
        ))}
      </div>

      <!-- CTAs -->
      <div class="flex flex-wrap gap-4">
        <Button href="/about" variant="primary">About Me</Button>
        <Button href="/blog" variant="secondary">Read Blog</Button>
        <Button href="/projects" variant="terminal">View Projects</Button>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="font-[var(--font-mono)] text-xs text-[var(--color-terminal-green)] flex flex-col items-center gap-2">
      <span>[scroll]</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </div>
  </div>
</section>
