---
import Button from '../ui/Button.astro';
import TerminalWindow from '../terminal/TerminalWindow.astro';
import { siteConfig } from '../../data/site';
---

<section class="py-24 relative">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left: Terminal bio -->
      <div class="animate-on-scroll">
        <TerminalWindow title="about.md">
          <div class="space-y-4">
            <p class="text-[var(--color-terminal-cyan)]"># About Me</p>
            <p class="text-gray-300">{siteConfig.blurb}</p>

            <p class="text-[var(--color-terminal-green)] mt-6">$ cat skills.json</p>
            <pre class="text-[var(--color-terminal-orange)] text-xs overflow-x-auto">{JSON.stringify(
                siteConfig.skills.map((s) => s.name),
                null,
                2
              )}</pre>
          </div>
        </TerminalWindow>
      </div>

      <!-- Right: Image with brutalist frame -->
      <div class="relative animate-on-scroll" style="animation-delay: 0.2s;">
        <div class="absolute inset-0 border-3 border-[var(--color-terminal-cyan)] translate-x-4 translate-y-4 hidden md:block"></div>
        <img
          src="/images/about/author.jpg"
          alt="Adam Davies"
          class="relative z-10 w-full grayscale hover:grayscale-0 transition-all duration-500 rounded-lg"
        />
      </div>
    </div>

    <div class="text-center mt-12 animate-on-scroll">
      <Button href="/about" variant="terminal">
        <span class="text-[var(--color-terminal-cyan)]">$</span> read more --verbose
      </Button>
    </div>
  </div>
</section>
