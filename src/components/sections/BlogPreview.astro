---
import Button from '../ui/Button.astro';
import PostCard from '../blog/PostCard.astro';
import Prompt from '../terminal/Prompt.astro';

interface Props {
  posts: any[];
}

const { posts } = Astro.props;
---

<section class="py-24 bg-[var(--color-dark-800)]">
  <div class="container mx-auto px-6">
    <!-- Section header -->
    <div class="mb-12 animate-on-scroll">
      <Prompt path="~/blog" command="ls -la posts/" />
      <h2 class="font-[var(--font-display)] text-4xl font-bold text-gray-100 mt-4">
        Latest <span class="text-[var(--color-terminal-green)]">Posts</span>
      </h2>
    </div>

    <!-- Posts grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post, i) => (
        <div class="animate-on-scroll" style={`animation-delay: ${i * 0.1}s;`}>
          <PostCard post={post} />
        </div>
      ))}
    </div>

    {posts.length === 0 && (
      <div class="text-center py-16">
        <p class="font-[var(--font-mono)] text-[var(--color-terminal-cyan)]">
          No posts found. Check back soon!
        </p>
      </div>
    )}

    <div class="text-center mt-12 animate-on-scroll">
      <Button href="/blog" variant="secondary">View All Posts</Button>
    </div>
  </div>
</section>
