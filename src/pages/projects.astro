---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/ui/Card.astro';
import Prompt from '../components/terminal/Prompt.astro';
import { getCollection } from 'astro:content';
import { fetchGitHubProjects, type GitHubProject } from '../lib/github';

// Fetch from content collection (static)
const contentProjects = await getCollection('projects');

// Fetch from GitHub at build time
const githubProjects = await fetchGitHubProjects('adamdavies1915', 'sideproject');

// Merge and deduplicate (content collection takes priority)
const contentGithubUrls = new Set(contentProjects.map(p => p.data.github?.toLowerCase()));
const uniqueGitHubProjects = githubProjects.filter(
  gp => !contentGithubUrls.has(gp.github.toLowerCase())
);

// Combine all projects
type ContentProject = {
  title: string;
  description: string;
  emoji?: string;
  tags?: string[];
  github?: string;
  link?: string;
  order?: number;
  source: 'content';
};

type CombinedProject = ContentProject | GitHubProject;

const allProjects: CombinedProject[] = [
  ...contentProjects.map(p => ({
    ...p.data,
    source: 'content' as const,
  })),
  ...uniqueGitHubProjects,
];

// Sort: content projects by order, then github projects by lastUpdated
const sortedProjects = allProjects.sort((a, b) => {
  // Content projects come first, sorted by order
  if (a.source === 'content' && b.source === 'content') {
    return ((a as ContentProject).order || 99) - ((b as ContentProject).order || 99);
  }
  // Content projects before GitHub projects
  if (a.source === 'content') return -1;
  if (b.source === 'content') return 1;
  // GitHub projects sorted by lastUpdated
  return (b as GitHubProject).lastUpdated.getTime() - (a as GitHubProject).lastUpdated.getTime();
});
---

<BaseLayout title="Projects" description="Side projects and experiments by Adam Davies">
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-6">
      <Prompt path="~/projects" command="ls -la --source=github,local" />
      <h1 class="font-[var(--font-display)] text-5xl font-bold text-gray-100 mt-4">
        Side <span class="text-[var(--color-terminal-purple)]">Projects</span>
      </h1>
      <p class="text-gray-400 mt-4 max-w-2xl">
        A collection of tools, experiments, and side projects I've built. Includes projects from GitHub with the <code class="text-[var(--color-terminal-cyan)] bg-[var(--color-dark-600)] px-1 rounded">sideproject</code> topic.
      </p>
    </div>
  </section>

  <section class="pb-24">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {sortedProjects.map((project, i) => (
          <div class="animate-on-scroll" style={`animation-delay: ${i * 0.1}s;`}>
            <Card class="h-full group" hover={true}>
              <div class="p-6 h-full flex flex-col">
                <!-- Source badge for GitHub projects -->
                {project.source === 'github' && (
                  <span class="self-start font-[var(--font-mono)] text-xs px-2 py-0.5 bg-[var(--color-dark-600)] text-[var(--color-terminal-purple)] rounded mb-3">
                    from GitHub
                  </span>
                )}

                <!-- Project icon/emoji -->
                {project.emoji && (
                  <span class="text-5xl mb-4 block">{project.emoji}</span>
                )}

                <!-- Title -->
                <h2 class="font-[var(--font-display)] text-2xl font-bold text-gray-100 mb-3 group-hover:text-[var(--color-terminal-green)] transition-colors">
                  {project.title}
                </h2>

                <!-- Description or Summary -->
                <p class="text-gray-400 mb-4">
                  {project.source === 'github' && (project as GitHubProject).summary
                    ? (project as GitHubProject).summary!.split('\n')[0].slice(0, 200)
                    : project.description}
                </p>

                <!-- Tags -->
                {project.tags && project.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-4">
                    {project.tags.slice(0, 5).map((tag: string) => (
                      <span class="font-[var(--font-mono)] text-xs px-2 py-1 bg-[var(--color-dark-600)] text-[var(--color-terminal-cyan)] rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <!-- Links -->
                <div class="flex gap-4 mt-auto">
                  {project.github && (
                    <a
                      href={project.github}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="font-[var(--font-mono)] text-sm text-[var(--color-terminal-cyan)] hover:text-[var(--color-terminal-green)] transition-colors inline-flex items-center gap-1"
                    >
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                      </svg>
                      View Source
                      {project.source === 'github' && (project as GitHubProject).stars > 0 && (
                        <span class="ml-1 text-[var(--color-terminal-orange)]">
                          ({(project as GitHubProject).stars} â˜…)
                        </span>
                      )}
                    </a>
                  )}
                </div>
              </div>
            </Card>
          </div>
        ))}
      </div>

      {sortedProjects.length === 0 && (
        <div class="text-center py-16">
          <div class="font-[var(--font-mono)] text-[var(--color-terminal-cyan)] mb-4">
            $ ls<br />
            <span class="text-gray-500">No projects found.</span>
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
