---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/blog/PostCard.astro';
import Prompt from '../../components/terminal/Prompt.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog" description="Thoughts on software engineering, side projects, and more">
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-6">
      <Prompt path="~/blog" command="ls -la posts/" />
      <h1 class="font-[var(--font-display)] text-5xl font-bold text-gray-100 mt-4">
        Blog <span class="text-[var(--color-terminal-green)]">Posts</span>
      </h1>
      <p class="text-gray-400 mt-4 max-w-2xl">
        Thoughts on software engineering, side projects, data analysis, and whatever else I'm exploring.
      </p>
    </div>
  </section>

  <section class="pb-24">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedPosts.map((post, i) => (
          <div class="animate-on-scroll" style={`animation-delay: ${i * 0.1}s;`}>
            <PostCard post={post} />
          </div>
        ))}
      </div>

      {sortedPosts.length === 0 && (
        <div class="text-center py-16">
          <div class="font-[var(--font-mono)] text-[var(--color-terminal-cyan)] mb-4">
            $ ls posts/<br />
            <span class="text-gray-500">No files found.</span>
          </div>
          <p class="text-gray-500 mt-2">Check back soon for new posts!</p>
        </div>
      )}
    </div>
  </section>
</BaseLayout>
